<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width:30%; margin: 30px auto;">
            <form method="post" action="/campgrounds/<%= campground._id %>?_method=PUT">
                <div class="form-group">
                    <input type="text" value="<%= campground.name %>" name="campground[name]" class="form-control"></input>
                </div>
                <div class="form-group">
                    <input type="number" value="<%= campground.price %>" name="campground[price]" class="form-control" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" value="<%= campground.image %>" name="campground[image]" class="form-control"></input>
                </div>
                <div class="form-group">
                    <input type="text" value="<%= campground.description %>" name="campground[description]" class="form-control"></input>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-success btn-block"></input>
                </div>    
            </form>
            <a href="/campgrounds">&laquo; Go Back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>