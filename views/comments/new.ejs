<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>
        <div style="width:30%; margin: 30px auto;">
            <form method="post" action="/campgrounds/<%= campground._id %>/comments">
                <div class="form-group">
                    <input type="text" placeholder="text" name="comment[text]" class="form-control"></input>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-success btn-block"></input>
                </div>    
            </form>
            <a href="/campgrounds">&laquo; Go Back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>